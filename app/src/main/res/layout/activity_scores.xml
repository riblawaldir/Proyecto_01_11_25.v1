<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_curve" />

    <!-- Header con puntaje total -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_score"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="64sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos Totales"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/drawable_gradient_orange"
            android:backgroundTint="#33FFFFFF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Lista de puntajes en tarjeta redondeada hacia arriba -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerContainer"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="-20dp"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de Logros"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/textDark"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvScores"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/padding_medium"
                android:clipToPadding="false" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="16dp"
        app:menu="@menu/bottom_navigation"
        app:itemIconTint="@color/orangeEnd"
        app:itemTextColor="@color/orangeEnd" />

</RelativeLayout>