<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el tipo de bÃºsqueda:"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"/>

    <RadioGroup
        android:id="@+id/rgSearchType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbSearchByEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar por Email"
            android:checked="true"
            android:textSize="14sp"/>

        <RadioButton
            android:id="@+id/rbSearchByName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar por Nombre"
            android:textSize="14sp"/>

        <RadioButton
            android:id="@+id/rbSearchById"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar por ID"
            android:textSize="14sp"/>

    </RadioGroup>

    <EditText
        android:id="@+id/etSearchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email del usuario"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="8dp"/>

</LinearLayout>

