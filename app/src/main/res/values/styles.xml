<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Text Styles -->
    <style name="TextStyleTitle">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextStyleSubtitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextStyleBody">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextStyleCaption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStylePrimary" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyleDefault">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/cardWhite</item>
    </style>

</resources>

