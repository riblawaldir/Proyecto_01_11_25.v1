<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Proyecto_01_11_25" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangePrimary</item>
        <item name="colorPrimaryVariant">@color/orangeDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orangeAccent</item>
        <item name="colorSecondaryVariant">@color/orangeDark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:windowBackground">@color/cardWhite</item>
    </style>

    <style name="Theme.Proyecto_01_11_25.Focus" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangePrimary</item>
        <item name="colorPrimaryVariant">@color/orangeDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orangeAccent</item>
        <item name="colorSecondaryVariant">@color/orangeDark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:windowBackground">#002060</item>
        <item name="android:textColorPrimary">#FFFFFFFF</item>
        <item name="android:textColorSecondary">#B3D9FF</item>
        <item name="android:statusBarColor">#001440</item>
        <item name="android:navigationBarColor">#001440</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Atributos necesarios para BottomNavigationView -->
        <item name="colorSurface">#002060</item>
        <item name="colorSurfaceVariant">#003080</item>
        <item name="colorOnSurface">#FFFFFFFF</item>
        <item name="colorOnSurfaceVariant">#B3D9FF</item>
        <item name="colorControlNormal">#888888</item>
        <item name="colorControlActivated">#FF5200</item>
    </style>

</resources>
